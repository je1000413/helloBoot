            <pattern>[%d][%-5p][%t][%C{1}-%L] %m - %r%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE_WARN_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <filter class = "ch.qos.logback.classic.filter.LevelFilter">
            <level>WARN</level>

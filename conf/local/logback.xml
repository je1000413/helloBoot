    </appender>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.core.encoder.LayoutWrappingEncoder">
            <layout class="com.com2verse.platform.logger.CustomJsonLayout">
                <timestampFormat>yyyy-MM-dd'T'HH:mm:ss.SSSX</timestampFormat>
                <timestampFormatTimezoneId>Etc/UTC</timestampFormatTimezoneId>
                <categoryName>${LOGS_PROJECT_NAME}</categoryName>
                <appendLineSeparator>true</appendLineSeparator>
                <jsonFormatter class="ch.qos.logback.contrib.jackson.JacksonJsonFormatter">
                    <prettyPrint>false</prettyPrint>
                </jsonFormatter>
            </layout>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="FILE_APPLICATION_LOG" />
        <appender-ref ref="FILE_INFO_LOG" />
        <appender-ref ref="FILE_DEBUG_LOG" />
        <appender-ref ref="FILE_WARN_LOG" />
        <appender-ref ref="FILE_ERROR_LOG" />
        <appender-ref ref="FILE_TRACE_LOG" />
        <appender-ref ref="CONSOLE" />
    </root>
</configuration>
            <maxHistory>60</maxHistory>
            <totalSizeCap>20GB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>[%d][%-5p][%t][%C{1}-%L] %m - %r%n</pattern>
        </encoder>
    </appender>

